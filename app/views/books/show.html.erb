<%= notice %>
<div class= "body", style= "margin-top: 50px;">
<%= render 'books/error', book: @book %>
<div class="col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag @book_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table>
	<tr><th>name</th><td><%= @book_user.name %></td></tr>
	<tr><th>introduction</th><td><%= @book_user.introduction %></td></tr>
</table>
<%= link_to "", edit_user_path(@book_user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user}" %>

<h2>New book</h2>
<%= form_for(@new_book) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, class: "btn-block" %>
	<%= f.label "Opinion" %>
	<%= f.text_area :body,class: "col-xs-12 book_body" %>
	<%= f.submit "Create Book",class: "btn btn-primary col-xs-12" %>
<% end %>
</div>


<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h2>Book detail</h2>

			<table class="table table-striped">
				<tr>
					<td>
						<%= link_to user_path(@book.user) do %>
						<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= @book.title %></td>
					<td><%= @book.body %></td>
					<% if @book.user_id == current_user.id %>
						<td><%= link_to "Edit", edit_book_path(@book),class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy", book_path(@book),class: "btn-sm btn-danger destroy_book_#{@book.id}",  method: :delete %></td>
					<% end %>
					</tr>
			</table>
		</div>
	</div>
</div>
</div>