<div class= "body", style= "margin-top: 50px;">
<%= render 'books/error', book: @book %>
<div class="col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table>
	<tr><th>name</th><td><%= @user.name %></td></tr>
	<tr><th>introduction</th><td><%= current_user.introduction %></td></tr>
</table>
<%= link_to "", edit_user_path(current_user.id),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>

<div class="row"></div>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, class: "btn-block" %>
	<%= f.label "Opinion" %>
	<%= f.text_area :body,class: "col-xs-12 book_body" %>
	<%= f.submit "Create Book",class: "btn btn-primary col-xs-12" %>
<% end %>
</div>


<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h2>Users</h2>

			<table class="table table-striped">
				<thead>
					<th>Image</th>
					<th>Name</th>
					<th></th>
				</thead>
				<tbody>
					<% @users.each do |user| %>
						<tr>
							<td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpg', fallback: "no_image.jpg",size: "40x40" %></td>
							<td><%= user.name %></td>
							<td><%= link_to "Show", user_path(user) %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
</div>