<%= notice %>
<div class= "body", style= "margin-top: 50px;">
<%= render 'books/error', book: @book %>
<div class="col-xs-3">
<h2>User info</h2>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
<table>
	<tr><th>name</th><td><%= @user.name %></td></tr>
	<tr><th>introduction</th><td><%= @user.introduction %></td></tr>
</table>
<%= link_to "", edit_user_path(@user),class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench edit_user_#{current_user.id}" %>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title, class: "btn-block" %>
	<%= f.label "Opinion" %>
	<%= f.text_area :body,class: "col-xs-12 book_body"  %>
	<%= f.submit "Create Book",class: "btn btn-primary col-xs-12" %>
<% end %>
</div>

<div class="container">
	<div class="row">
		<div class="col-xs-9">
			<h2>Books</h2>
			<table class="table table-striped">
				<thead>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</thead>
				<tbody>
					<% @user.books.each do |book| %>
					<tr>
						<td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %></td>
						<td><%= link_to book.title,book_path(book) %></td>
						<td><%= book.body %></td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>
</div>